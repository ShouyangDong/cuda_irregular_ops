__mlu_global__ void softmax(float *A, float *output) {
  __nram__ float dest[5];
  __nram__ float dinominator[5];
  __nram__ float dinominator_temp[5];
  __nram__ float src1[5];
  __nram__ float addition[5];

  for (int i = clusterId * 4 + coreId; i < 12; i += 16) {
    __memcpy(src1, A + i * 5, 5 * sizeof(float), GDRAM2NRAM);
    __bang_active_exp(src1, src1, 5);
    __bang_write_zero(dinominator, 5);
    __bang_sumpool(dinominator, src1, 1, 1, 5, 1, 5, 1, 1);
    __memset_nram(dinominator_temp, 5, dinominator[0]);
    __bang_active_recip(dinominator_temp, dinominator_temp, 5);
    __bang_mul(dest, src1, dinominator_temp, 5);
    __memcpy(output + 5 * i, dest, 5 * sizeof(float), NRAM2GDRAM);
  }
}

extern "C" void softmax_kernel(float *C, float *A, int size1, int size2) {
  float *d_A, *d_C;
  cnrtQueue_t queue;
  cnrtSetDevice(0);
  cnrtQueueCreate(&queue);
  cnrtMalloc((void **)(&d_A), size1 * size2 * sizeof(float));
  cnrtMalloc((void **)(&d_C), size1 * size2 * sizeof(float));

  cnrtMemcpy(d_A, A, size1 * size2 * sizeof(float), cnrtMemcpyHostToDev);

  cnrtDim3_t dim = {1, 4, 4};
  cnrtFunctionType_t ktype = CNRT_FUNC_TYPE_UNION4;

  softmax<<<dim, ktype, queue>>>(d_A, d_C);

  cnrtMemcpy(C, d_C, size1 * size2 * sizeof(float), cnrtMemcpyDevToHost);

  cnrtFree(d_A);
  cnrtFree(d_C);
}